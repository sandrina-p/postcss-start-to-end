{
  "name": "postcss-start-to-end",
  "version": "1.0.0",
  "description": "PostCSS plugin that lets you control your layout (ltr or rtl) through logical rather than physical rules",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rtl",
    "ltr",
    "direction",
    "start",
    "end",
    "layout",
    "universal",
    "logical-properties",
    "padding",
    "margin",
    "border",
    "text-algin",
    "float",
    "clear",
    "position"
  ],
  "author": "Sandrina Pereira <sandrin4pereir4@gmail.com>",
  "license": "MIT",
  "repository": "sandrina-p/postcss-start-to-end",
  "bugs": {
    "url": "https://github.com/sandrina-p/postcss-start-to-end/issues"
  },
  "homepage": "https://github.com/sandrina-p/postcss-start-to-end",
  "dependencies": {
    "postcss": "^6.0.1",
    "postcss-reporter": "3.x.x"
  },
  "devDependencies": {
    "coveralls": "^2.13.1",
    "eslint": "^3.19.0",
    "eslint-config-postcss": "^2.0.2",
    "jest": "^20.0.4"
  },
  "scripts": {
    "test": "jest --coverage && eslint *.js"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss/es5",
    "env": {
      "jest": true
    }
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
